<div class="divide80"></div>
<div class="panel panel-default">
  <div class="panel-heading"><h2>Editar <%= resource_name.to_s.humanize %></h2></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :nombre, "Nombre" %><br />
      <%= f.text_field :nombre, autofocus: true, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :apellidoPaterno, "Apellido Paterno" %><br />
      <%= f.text_field :apellidoPaterno, class:'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :apellidoMaterno, "Apellido Materno" %><br />
      <%= f.text_field :apellidoMaterno, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, 'Contraseña' %> <i>(Dejarlo en blanco si no se cambió)</i><br />
      <%= f.password_field :password, autocomplete: "off",class:'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar nueva contraseña' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, 'Contraseña actual' %> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "off",class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Actualizar", class:'btn btn-primary' %>
    </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Está seguro?" }, method: :delete, class:'btn btn-danger' %></p>

    <%= link_to "Atras", root_path, class:'btn btn-default' %>
  </div>
</div>