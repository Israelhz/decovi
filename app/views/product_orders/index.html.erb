<h1>Productos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Producto</th>
      <th>Acabado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= product_order.cantidad %></td>
        <td><%= Producto.find(product_order.producto_id).nombre %></td>
        <td><%= Producto.find(product_order.producto_id).acabado %></td>
        <td><%= link_to 'Ver', product_order %></td>
        <td><%= link_to 'Editar', edit_product_order_path(product_order) %></td>
        <td><%= link_to 'Eliminar', product_order, method: :delete, data: { confirm: 'Â¿Desea eliminar el producto?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

