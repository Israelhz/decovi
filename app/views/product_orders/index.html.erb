<p id="notice"><%= notice %></p>

<h1>Product Orders</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Producto</th>
      <th>Acabado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= product_order.cantidad %></td>
        <td><%= Producto.find(product_order.producto_id).nombre %></td>
        <td><%= Producto.find(product_order.producto_id).acabado %></td>
        <td><%= link_to 'Show', product_order %></td>
        <td><%= link_to 'Edit', edit_product_order_path(product_order) %></td>
        <td><%= link_to 'Destroy', product_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

