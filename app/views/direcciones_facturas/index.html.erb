<div class="divide80"></div>

<p id="notice"><%= notice %></p>

<h1>Direcciones de facturación</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Estado</th>
      <th>Municipio</th>
      <th>Calle</th>
      <th>Número</th>
      <th>C.P</th>
      <th>RFC</th>
      <th>Notas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direcciones_facturas.each do |direcciones_factura| %>
      <tr>
        <td><%= direcciones_factura.estado %></td>
        <td><%= direcciones_factura.municipio %></td>
        <td><%= direcciones_factura.colonia %></td>
        <td><%= direcciones_factura.numero %></td>
        <td><%= direcciones_factura.cp %></td>
        <td><%= direcciones_factura.rfc %></td>
        <td><%= direcciones_factura.notas %></td>
        <td><%= link_to 'Ver', direcciones_factura %></td>
        <td><%= link_to 'Editar', edit_direcciones_factura_path(direcciones_factura) %></td>
        <td><%= link_to 'Eliminar', direcciones_factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva dirección de facturación', new_direcciones_factura_path, class:'btn btn-primary'  %>

