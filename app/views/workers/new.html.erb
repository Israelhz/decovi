<div class="divide80"></div>
  <div class="panel panel-default">
    <div class="panel-heading"><h2>Nuevo Empleado</h2></div>
    <div class="panel-body">
    <%= form_for User.new , :url => {:action => "add_user"} do |user| %>
      
      <div class="form-group">
        <%= user.label :nombre, "Nombre" %><br />
        <%= user.text_field :nombre, autofocus: true, class:'form-control', :required => true %>
      </div>
      <div class="form-group">
        <%= user.label :apellidoPaterno, "Apellido Paterno" %><br />
        <%= user.text_field :apellidoPaterno, class:'form-control', :required => true%>
      </div>

      <div class="form-group">
        <%= user.label :apellidoMaterno, "Apellido Materno" %><br />
        <%= user.text_field :apellidoMaterno, class:'form-control', :required => true %>
      </div>
      
      <div class="form-group">
        <%= user.label :email %><br />
        <%=user.email_field :email%>
      </div>
      
      <div class="form-group">
        <%= user.label :password %><br />
        <%=user.password_field :password, :required => true%>
      </div>
      
      <div class="form-group">
        <%= user.label :password_confirmation %><br />
        <%=user.password_field :password_confirmation, :required => true%>
      </div>

      <%=user.hidden_field :trabajaPara, :value => current_user.id%>
      <%=user.hidden_field :empleado, :value => true%>
      <%=user.hidden_field :aprobado, :value => true%>

      <div class="actions">
        <%=user.submit 'Agregar Empleado', class:'btn btn-primary'%>
      </div>
    <%end%>