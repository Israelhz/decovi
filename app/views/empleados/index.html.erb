<p id="notice"><%= notice %></p>

<div class="divide80"></div>
<h4 class="margin30">Empleados</h4>
                    
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido materno</th>
        <th>Apellido paterno</th>
        <th>Correo</th>
      </tr>
    </thead>
    <tbody>
      <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellidoM %></td>
        <td><%= empleado.apellidoP %></td>
        <td><%= empleado.correo %></td>
        <td><%= link_to 'Ver', empleado %></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Eliminar', empleado, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Nuevo empleado', new_empleado_path, class:'btn btn-primary' %>
