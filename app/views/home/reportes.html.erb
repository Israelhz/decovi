<div class="divide80"></div>
<div class="row">
	<div class="col-md-6">
		<table class="table table-hover">
		    <thead>
		        <tr>
		            <th>Producto</th>
		            <th>Ventas</th>
		        </tr>
		    </thead>
		    <tbody>
	    		<% @reporte.each do |r| %>
					<% @producto = Producto.find(r[0]) %>
					<tr>
						<td><%= @producto.nombre + ' ' + @producto.acabado %></td>
						<td><%= r[1] %></td>
					</tr>
				<% end %>
		    </tbody>
		</table>
	</div>
	<div class="col-sm-3">
        <div class="pricing-simple">
            <h4>Pedidos</h4>
            <h3><%= @cantPedidos %></h3>
            
        </div>
    </div>
    <div class="col-sm-3">
        <div class="pricing-simple">
            <h4>Usuarios</h4>
            <h4>Empresas: <%= @empresas %></h4>
            <h4>Individuo: <%= @individuos %></h4>
            
        </div>
    </div>
</div>
