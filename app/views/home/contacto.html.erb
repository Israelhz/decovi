<div class="divide60"></div>
<div class="container">
    <div class="row">
        <div class="col-md-8 margin30">
            <h3 class="heading">Contáctanos</h3>
            <div class="form-contact">
                <div class="required">
                    <p>( <span>*</span> requerido )</p>
                </div>

               <form name="sentMessage" id="contactForm" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row control-group">
                                <div class="form-group col-xs-12 controls">
                                    <label>Nombre<span>*</span></label>
                                    <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block"></p>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="row control-group">
                                <div class="form-group col-xs-12 controls">
                                    <label>Email<span>*</span></label>
                                    <input type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block"></p>
                                </div>
                            </div> 
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12  controls">
                            <label>Teléfono<span>*</span></label>
                            <input type="tel" class="form-control" placeholder="Phone Number" id="phone" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 controls">
                            <label>Mensaje<span>*</span></label>
                            <textarea rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-theme-bg btn-lg">Enviar</button>
                        </div>
                    </div>
                </form>

            </div><!--contact form-->
        </div>
        <div class="col-md-4">
            <h3 class="heading">Información</h3>
            <ul class="list-unstyled contact contact-info">
                <li><p><strong>Dirección:</strong> Cancún, México</p></li> 
                <li><p><strong>Email:</strong> <a href="#">decovi@decovi.com</a></p></li>
                <li> <p><strong>Teléfono:</strong> +91 1800 2345 2132</p></li>
            </ul>
  
        </div>
    </div>
</div>