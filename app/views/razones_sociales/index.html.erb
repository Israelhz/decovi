
<div class="divide80"></div>

<p id="notice"><%= notice %></p>

<h1>Razones Sociales</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>RFC</th>
      <th>Email</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>Notas</th>
      <th>Razones comerciales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @razones_sociales.each do |razones_sociale| %>
      <tr>
        <td><%= razones_sociale.nombre %></td>
        <td><%= razones_sociale.rfc %></td>
        <td><%= razones_sociale.email %></td>
        <td><%= razones_sociale.direccion %></td>
        <td><%= razones_sociale.telefono %></td>
        <td><%= razones_sociale.notas %></td>
        <td><%= link_to 'Ver Razones Comerciales', razones_comerciales_path(:razon => razones_sociale) %></td>
        <td><%= link_to 'Ver', razones_sociale %></td>
        <td><%= link_to 'Editar', edit_razones_sociale_path(razones_sociale) %></td>
        <td><%= link_to 'Eliminar', razones_sociale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Razón Social', new_razones_sociale_path, class:'btn btn-primary' %>

