<%= form_for(factura, html: {multipart: true}) do |f| %>
  <% if factura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(factura.errors.count, "error") %> prohibited this factura from being saved:</h2>

      <ul>
      <% factura.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :folio, '*Folio' %>
    <%= f.text_field :folio, :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :image, '*Imagen' %>
    <%= f.file_field :image, class: "form-control", :required => true %>
  </div>

  <div class="actions">
    <%= f.hidden_field :pedido_id, value: @pedido.id %>
    <%=f.hidden_field :user_id, :value => current_user.id%>
    <%= f.submit %>
  </div>
<% end %>
