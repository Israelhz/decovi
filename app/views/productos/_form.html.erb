      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, :required => true %>
  </div>

  <div class="field">
    <%= f.label :acabado %>
    <%= f.text_field :acabado, :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :image, 'Imagen' %>
    <%= f.file_field :image, :required => true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
