<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acabado</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.acabado %></td>
        <td><%= link_to 'Ver', producto %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
          <td><%= link_to 'Borrar', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
  <%= link_to 'Nuevo Producto', new_producto_path, class:'btn btn-primary' %>
<% end %>
