<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Tipo</th>
            <th>Estatus</th>
            <th>Productos</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.id %></td>
        <td><%= pedido.tipo %></td>
        <td><%= pedido.estatus %></td>
        <td>
          <% pedido.productos.each do |producto| %>
            <%= producto.cantidad.to_s + ' ' + producto.nombre  %> <br>
          <% end %>
        </td>
        <td><%= link_to "Agregar Productos", productos_path(:pedido => pedido) %></td>
        <td><%= link_to 'Ver', pedido %></td>
        <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Borrar', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pedido', new_pedido_path, class:'btn btn-primary' %>

