<p id="notice"><%= notice %></p>

<h1>Direcciones de Entrega</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Estado</th>
      <th>Municipio</th>
      <th>Calle</th>
      <th>Número</th>
      <th>C.P</th>
      <th>Teléfono</th>
      <th>Notas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direcciones_entregas.each do |direcciones_entrega| %>
      <tr>
        <td><%= direcciones_entrega.estado %></td>
        <td><%= direcciones_entrega.municipio %></td>
        <td><%= direcciones_entrega.colonia %></td>
        <td><%= direcciones_entrega.numero %></td>
        <td><%= direcciones_entrega.cp %></td>
        <td><%= direcciones_entrega.telefono %></td>
        <td><%= direcciones_entrega.notas %></td>
        <td><%= link_to 'Ver', direcciones_entrega %></td>
        <td><%= link_to 'Editar', edit_direcciones_entrega_path(direcciones_entrega) %></td>
        <td><%= link_to 'Eliminar', direcciones_entrega, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva dirección de entrega', new_direcciones_entrega_path, class:'btn btn-primary'  %>


